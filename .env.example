# ===========================================
# TerraLedger Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ----- Database -----
DATABASE_URL=postgresql://terraledger:terraledger_secret@localhost:5432/terraledger

# ----- Redis -----
REDIS_URL=redis://localhost:6379

# ----- JWT Authentication -----
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ----- IPFS (Pinata) -----
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# ----- Blockchain -----
# For local development:
BLOCKCHAIN_RPC_URL=http://localhost:8545

# For Polygon Mumbai Testnet:
# BLOCKCHAIN_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your-api-key

# For Polygon Mainnet:
# BLOCKCHAIN_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key

# Deployer private key (DO NOT commit this!)
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Contract addresses (filled after deployment)
ACCESS_CONTROL_ADDRESS=
LAND_REGISTRY_ADDRESS=
ESCROW_CONTRACT_ADDRESS=
INHERITANCE_MANAGER_ADDRESS=
LAND_BOUNDARY_ADDRESS=

# ----- Server -----
PORT=4000
NODE_ENV=development

# ----- Frontend -----
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:4000/graphql
NEXT_PUBLIC_CHAIN_ID=80001
NEXT_PUBLIC_NETWORK_NAME=Mumbai

# ----- Security -----
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# ----- Development / Demo Mode -----
# WARNING: Never use these in production!
SKIP_SIGNATURE_VERIFICATION=true

# ----- Logging -----
LOG_LEVEL=debug

# ----- Polygon Network Configuration -----
POLYGON_MUMBAI_RPC=https://rpc-mumbai.maticvigil.com
POLYGON_MAINNET_RPC=https://polygon-rpc.com
POLYGONSCAN_API_KEY=your-polygonscan-api-key
