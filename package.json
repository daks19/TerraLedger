{
  "name": "terraledger",
  "version": "1.0.0",
  "description": "Blockchain-Based Land Registry System",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "deploy:contracts": "cd packages/contracts && npx hardhat run scripts/deploy.js --network polygon_mumbai",
    "deploy:contracts:local": "cd packages/contracts && npx hardhat run scripts/deploy.js --network localhost",
    "hardhat:node": "cd packages/contracts && npx hardhat node",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker/docker-compose.prod.yml up -d",
    "migrate:db": "cd apps/backend && npm run migrate",
    "seed:db": "cd apps/backend && npm run seed"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
